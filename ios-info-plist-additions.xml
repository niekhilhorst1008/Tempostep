<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
  iOS Info.plist additions voor TempoStep
  
  Voeg deze keys toe aan: ios/App/App/Info.plist
  Dit bestand dient als referentie - kopieer de inhoud naar je Info.plist
-->
<plist version="1.0">
<dict>
    <!-- ===== MICROPHONE PERMISSION (voor Tuner functionaliteit) ===== -->
    <key>NSMicrophoneUsageDescription</key>
    <string>TempoStep heeft toegang tot je microfoon nodig om de tuner functionaliteit te bieden. Dit stelt je in staat om je instrument nauwkeurig te stemmen.</string>
    
    <!-- ===== AUDIO SESSION CONFIGURATIE ===== -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
    </array>
    
    <!-- ===== STATUS BAR STYLE ===== -->
    <key>UIStatusBarStyle</key>
    <string>UIStatusBarStyleLightContent</string>
    
    <key>UIViewControllerBasedStatusBarAppearance</key>
    <false/>
    
    <!-- ===== SUPPORTED INTERFACE ORIENTATIONS ===== -->
    <!-- iPhone -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
    </array>
    
    <!-- iPad -->
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <!-- ===== APP TRANSPORT SECURITY ===== -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <false/>
    </dict>
    
    <!-- ===== LAUNCH SCREEN ===== -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    
    <!-- ===== REQUIRES FULL SCREEN (iPhone X+ notch support) ===== -->
    <key>UIRequiresFullScreen</key>
    <false/>
    
    <!-- ===== CAPABILITIES ===== -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>arm64</string>
    </array>
    
    <!-- ===== AUDIO SETTINGS ===== -->
    <key>AVAudioSessionCategory</key>
    <string>AVAudioSessionCategoryPlayback</string>
    
    <key>AVAudioSessionCategoryOptions</key>
    <array>
        <string>AVAudioSessionCategoryOptionMixWithOthers</string>
    </array>
    
    <!-- ===== SCENE CONFIGURATION (iOS 13+) ===== -->
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
                </dict>
            </array>
        </dict>
    </dict>
    
    <!-- ===== FILE SHARING (optioneel) ===== -->
    <key>UIFileSharingEnabled</key>
    <false/>
    
    <!-- ===== SUPPORTS DOCUMENT BROWSER (optioneel) ===== -->
    <key>UISupportsDocumentBrowser</key>
    <false/>
    
    <!-- ===== PREVENT SCREENSHOTS (optioneel, voor security) ===== -->
    <!-- Niet aangeraden voor deze app -->
    <!--
    <key>UIApplicationSupportsScreenCapture</key>
    <false/>
    -->
    
    <!-- ===== FONTS (indien custom fonts gebruikt) ===== -->
    <!--
    <key>UIAppFonts</key>
    <array>
        <string>CustomFont-Regular.ttf</string>
        <string>CustomFont-Bold.ttf</string>
    </array>
    -->
    
    <!-- ===== LOCALIZATION ===== -->
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>
    
    <key>CFBundleLocalizations</key>
    <array>
        <string>en</string>
        <string>nl</string>
        <string>de</string>
        <string>es</string>
        <string>fr</string>
    </array>
</dict>
</plist>
